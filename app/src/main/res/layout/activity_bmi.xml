<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".BmiActivity"
    android:orientation="vertical"
    android:gravity="center"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarExercise"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:theme="@style/ToolbarTheme"
        android:background="@color/black"
        app:titleTextColor="@color/white"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bmiTitleTv"
        android:text="BMI CALCULATOR"
        android:gravity="center"
        android:textColor="#735EDE"
        android:textStyle="italic"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbarExercise"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="135dp"
        app:layout_constraintTop_toBottomOf="@+id/bmiTitleTv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bmiQues1Tv"
        android:layout_marginTop="25dp"
        android:paddingBottom="0dp"
        android:text="0"
        android:textSize="120dp"
        android:id="@+id/bmiValueTv"
        android:textColor="#FF7E1B"
        android:textAlignment="center"
        android:visibility="visible"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bmiQues1Tv"
        android:gravity="left"
        android:text="Enter your height in meters:"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@+id/bmiValueTv"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="16dp"
        android:visibility="visible"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bmiQues1Tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:id="@+id/bmiAns1"
        android:visibility="visible"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bmiValueTv"
        app:layout_constraintBottom_toTopOf="@+id/bmiQues2Tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Enter your height in feet and inches"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:textSize="16dp"
        android:id="@+id/usQuesTv"
        android:visibility="invisible"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@+id/usQuesTv"
        app:layout_constraintBottom_toBottomOf="@id/bmiQues2Tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/usLL"
        android:visibility="invisible"
        android:orientation="horizontal"
        >
        <EditText
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:hint="feet"
            android:id="@+id/feetEt"
            />
        <EditText
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:hint="inches"
            android:id="@+id/inchesEt"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bmiAns1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Enter your weight in kgs:"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textSize="16dp"
        android:layout_marginTop="15dp"
        android:id="@+id/bmiQues2Tv"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bmiQues2Tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="25dp"
        android:id="@+id/bmiAns2"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bmiAns2"
        android:text="Calculate"
        android:id="@+id/btnCalculate"
        android:layout_margin="25dp"
        android:textSize="16dp"
        android:background="@color/black"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:text=""
        android:id="@+id/feedbackTv"
        app:layout_constraintTop_toBottomOf="@+id/btnCalculate"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textAlignment="center"
        android:textSize="16dp"
        android:textStyle="bold"
        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/feedbackTv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/rgUnits"
        android:layout_margin="10dp"
        android:background="@drawable/drawable_radio_group_tab_background"
        android:orientation="horizontal"
        >
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="0.50"
            android:background="@drawable/drawable_units_tab_selector"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="Metric units"
            android:textColor="@drawable/drawable_units_tab_text_color_selector"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/rbMetricUnits"
            />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="0.50"
            android:background="@drawable/drawable_units_tab_selector"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:text="US units"
            android:textColor="@drawable/drawable_units_tab_text_color_selector"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/rbUsUnits"
            />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>